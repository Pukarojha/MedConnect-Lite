<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#E1E8E9"

    android:foregroundTint="#E1E8E9"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#BDDBD8"

        android:foregroundTint="#B0D9D5"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        android:paddingVertical="15dp">

        <!--        heading-->
        <TextView

            android:id="@+id/medicationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#04544C"
            android:textSize="21sp" />


        <TextView
            android:id="@+id/medicationDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#04544C"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/medicationDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#04544C"
            android:textSize="21sp" />
    </LinearLayout>

    <!--//line-->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:textColor="#03A9F0"

        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
</LinearLayout>